@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h1 class="display-4">Hey All You Cool Cats and Kittens!</h1>
    <p class="lead">Ready to see what today will bring?</p>
    <p>Go ahead and click on your bookmark dropdown and head on over to the calendar button to get your day started!</p>
    <hr class="my-4">
    <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel" style="width: 450px; margin:auto">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Images/green.jpg" />
            </div>
            <div class="carousel-item">
                <img src="~/Images/pink.jpg" />
            </div>
            <div class="carousel-item">
                <img src="~/Images/purple.jpg" />
            </div>
            <div class="carousel-item">
                <img src="~/Images/red.jpg" />
            </div>
            <div class="carousel-item">
                <img src="~/Images/yellow.jpg" />
            </div>
            <div class="carousel-item">
                <img src="~/Images/yellows.jpg" />
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
